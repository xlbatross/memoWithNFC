<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryMemoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_category_memo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/icons8_left_32"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_category_memo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:text="카테고리명"
            android:textStyle="bold"
            android:fontFamily="@font/scdream5"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_next_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_category_memo"
        app:layout_constraintBottom_toTopOf="@+id/previous_memo_container"
        tools:layout_editor_absoluteX="0dp" >
    </android.support.v7.widget.RecyclerView>

    <!-- height가 60이면 화면의 85퍼, 270이면 55퍼 정도 -->
    <android.support.constraint.ConstraintLayout
        android:id = "@+id/previous_memo_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_next_memo"
        app:layout_constraintBottom_toTopOf="@id/menu_container_category">

        <TextView
            android:id="@+id/previous_memo_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="지나간 메모"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_previous_memo" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_previous_memo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/previous_memo_button"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id = "@+id/menu_container_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/previous_memo_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/regist_nfc_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="nfc 등록"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/add_memo_category"/>

        <Button
            android:id="@+id/add_memo_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="메모 추가"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/regist_nfc_category"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>